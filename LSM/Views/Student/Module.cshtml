@model LSM.Models.Module

@{
    ViewBag.Title = "Module info";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Home", "Index")</li>
        <li class="breadcrumb-item active" aria-current="page">Module: @Model.Name</li>
    </ol>
</nav>

<h1>Module: @Model.Name</h1>
<div class="container">
    <div class="row">
        
            <div class="col-md-6">
                <h2>Module Info</h2>
                <p><strong>Start Date: @Model.StartDate Stop Date: @Model.StopDate</strong></p>
                <p>@Model.Description</p>
            </div>


            <div class="col-md-6">      
                <h2>Activities</h2>
                <div class="table_div">
                    <table class="table">
                        <tr>
                            <th>View</th>
                            <th>Day</th>
                            <th>Pass</th>
                        </tr>


                        @foreach (var item in Model.Activitys.ToList())
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(item.Name, "Activity", "Student", new { id = item.Id }, new { @class = "btn btn-info" })
                                </td>
                                <td>
                                    @item.Day
                                </td>
                                <td>
                                    @if (item.Pass == LSM.Models.Epass.FM)
                                    {
                                        <p>Morning</p>
                                    }
                                    @if (item.Pass == LSM.Models.Epass.EM)
                                    {
                                        <p>Afternoon</p>
                                    }
                                    @if (item.Pass == LSM.Models.Epass.FMEM)
                                    {
                                        <p>Full day</p>
                                    }
                                </td>
                            </tr>
                        }


                    </table>
                </div>
            </div>

       

    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
